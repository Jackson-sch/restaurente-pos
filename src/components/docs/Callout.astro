---
interface Props {
  type?: "note" | "warning" | "tip" | "info";
  title?: string;
}

const { type = "info", title } = Astro.props;

const styles = {
  note: {
    container: "bg-slate-800/50 border-slate-700 text-slate-300",
    icon: "text-slate-400",
    defaultTitle: "Nota",
  },
  warning: {
    container: "bg-orange-900/20 border-orange-500/30 text-orange-200",
    icon: "text-orange-400",
    defaultTitle: "Advertencia",
  },
  tip: {
    container: "bg-green-900/20 border-green-500/30 text-green-200",
    icon: "text-green-400",
    defaultTitle: "Tip",
  },
  info: {
    container: "bg-blue-900/20 border-blue-500/30 text-blue-200",
    icon: "text-blue-400",
    defaultTitle: "Informaci√≥n",
  },
};

const style = styles[type];
---

<div class={`my-6 rounded-lg border p-4 ${style.container} not-prose`}>
  <div class="flex items-start gap-3">
    <div class={`mt-1 ${style.icon}`}>
      {
        type === "note" && (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <>
              <circle cx="12" cy="12" r="10" />
              <line x1="12" x2="12" y1="16" y2="12" />
              <line x1="12" x2="12.01" y1="8" y2="8" />
            </>
          </svg>
        )
      }
      {
        type === "warning" && (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <>
              <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3" />
              <line x1="12" x2="12" y1="9" y2="13" />
              <line x1="12" x2="12.01" y1="17" y2="17" />
            </>
          </svg>
        )
      }
      {
        type === "tip" && (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <>
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
              <polyline points="22 4 12 14.01 9 11.01" />
            </>
          </svg>
        )
      }
      {
        type === "info" && (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <>
              <circle cx="12" cy="12" r="10" />
              <path d="M12 16v-4" />
              <path d="M12 8h.01" />
            </>
          </svg>
        )
      }
    </div>
    <div>
      <h5 class="font-semibold mb-1 text-sm">{title || style.defaultTitle}</h5>
      <div class="text-sm opacity-90 leading-relaxed">
        <slot />
      </div>
    </div>
  </div>
</div>
